FROM debian:bullseye

# Installation de MariaDB
RUN apt-get update && apt-get install -y \
    mariadb-server \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Configuration bind-address via un fichier .cnf
RUN echo "[mysqld]\nbind-address=0.0.0.0" > /etc/mysql/conf.d/bind-address.cnf

# Copie du script d'initialisation
COPY conf/mariadb-conf.sh /usr/local/bin/mariadb-conf.sh 
RUN chmod +x /usr/local/bin/mariadb-conf.sh 

EXPOSE 3306

CMD ["/usr/local/bin/mariadb-conf.sh"]

