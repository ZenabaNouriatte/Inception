FROM debian:bullseye

# Install MariaDB
RUN apt-get update && apt-get install -y \
    mariadb-server \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Config bind-address via un fichier .cnf
RUN echo "[mysqld]\nbind-address=0.0.0.0" > /etc/mysql/conf.d/bind-address.cnf

# Copie script d'init
COPY conf/mariadb-conf.sh /usr/local/bin/mariadb-conf.sh 
RUN chmod +x /usr/local/bin/mariadb-conf.sh 

# expose le port aux autres containers mais pas au host
EXPOSE 3306

#Lance les cmds contenues dans mariadb-conf
CMD ["/usr/local/bin/mariadb-conf.sh"]