FROM debian:bullseye
RUN apt-get update && apt-get install -y \
    nginx \
    openssl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Creation du dossier pour les certificats SSL
RUN mkdir -p /etc/nginx/ssl

# Generation d'un certificat SSL auto-signe valide pendant 365 jours
RUN openssl req -x509 -nodes -days 365 -newkey rsa:2048 \
    -keyout /etc/nginx/ssl/nginx.key \
    -out /etc/nginx/ssl/nginx.crt \
    -subj "/C=FR/ST=IDF/L=Paris/O=42/OU=42/CN=zmogne.42.fr"
RUN mkdir -p /var/www/html

# Copie du fichier de configuration nginx dans le conteneur
COPY conf/nginx.conf /etc/nginx/conf.d/default.conf

# Ouverture du port 443 pour HTTPS
EXPOSE 443

# Lancement de nginx en mode premier plan
CMD ["nginx", "-g", "daemon off;"]
